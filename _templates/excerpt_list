<!-- start excerpt_list -->
<div id="content">

<%
	my @posts = all_posts();
	my $n = get_var('start_post_n') // 1;
	my $m = get_var('end_post_n') // get_var( 'config' )->{page_size};

	foreach ( $n .. $m ) {
		my $post = $posts[$_];
		next unless $post;

		my $date = Time::Moment
			->from_string( $post->{date} . '-0400', lenient => 1 )
			->strftime( '%B %d, %Y' );
%>
    <!-- ----------------------------------------------------------- -->
	<div class="post">
		<h2 class="post_title excerpt_page"><a href="<%= $post->{web_path} =%>"><%= $post->{title} =%></a></h2>

		<div class="byline">
		<span class="author"><%= $post->{author} =%></span> â€¢ <span class="date"><%= $date =%></span>
		</div>

		<div class="excerpt">

		<%= excerpt( $post ) =%>

		</div> <!-- excerpt -->

		<span class="read_more"><a href="<%= $post->{web_path} =%>">Read more...</a></span>
	</div> <!-- post -->


<% } %>



</div>
<!-- end excerpt_list -->
